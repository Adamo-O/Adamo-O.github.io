---
import Layout from "../layouts/Layout.astro";
import Navbar from "../layouts/Navbar.astro";
import "../../globals.css";
import {
  Linkedin,
  Mail,
  Github,
  Instagram,
  FileText,
  Calendar,
} from "lucide-astro";
import Button from "@/components/Button.astro";
import { cn, sortContent } from "../lib/utils";
import Card from "@/components/Card.astro";
import Project from "@/components/Project.astro";
import Experience from "@/components/Experience.astro";
import { getCollection, render } from "astro:content";

const projectsRaw = await getCollection("projects");
const experiencesRaw = await getCollection("experience");

// Pre-render content for all entries (required in Astro 5 content layer)
const projects = await Promise.all(
  projectsRaw.map(async (project) => {
    const { Content } = await render(project);
    return { ...project, Content };
  })
);

const experiences = await Promise.all(
  experiencesRaw.map(async (experience) => {
    const { Content } = await render(experience);
    return { ...experience, Content };
  })
);

const featuredProjects = projects.filter(
  (project) =>
    project.data.highlight &&
    !project.data.hidden &&
    project.data.highlightSummary
);
const featuredExperiences = experiences.filter(
  (experience) =>
    experience.data.highlight &&
    !experience.data.hidden &&
    experience.data.highlightSummary
);
---

